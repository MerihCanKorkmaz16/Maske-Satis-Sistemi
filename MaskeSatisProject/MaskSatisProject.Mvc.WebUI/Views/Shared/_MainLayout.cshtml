                            <ul class="dropdown-menu">
                                <li><a href="/Account/LogOut">Log Out</a></li>
                            </ul>
                        </li>

                    </ul>
                </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
        </nav>

        <div class="jumbotron">
            @RenderBody()
        </div>


    </div>
